{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.oml",
    "fileTypes": ["oml"],
    "patterns": [
        {
            "include": "#element"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#attribute"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "element": {
            "begin": "<([\\w:-]+)",
            "beginCaptures": {
                "1": { "name": "entity.name.tag" }
            },
            "end": "/?>",
            "name": "meta.tag",
            "patterns": [
                {
                    "include": "#attribute"
                }
            ]
        },
        "comment": {
            "begin": "-",
            "end": "-",
            "name": "comment.block"
        },
        "attribute": {
            "match": "\\b([\\w:-]+)\\s*=\\s*",
            "captures": {
                "1": { "name": "entity.other.attribute-name" },
                "2": { "name": "punctuation.separator.key-value" }
            },
            "name": "meta.attribute",
            "patterns": [
                {
                    "include": "#strings"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double",
                    "begin": "'",
                    "end": "\""
                }
            ]
        }
    }
}
